% Cores
\definecolor{primary}{HTML}{0B5EA8}

% Separador estilizado
\newcommand{\sectionline}{\noindent\color{primary}\rule{\linewidth}{0.7pt}}

% Cabeçalho principal
\newcommand{\maintitle}[2]{
  {\bfseries\Large #1}\hfill{\small #2}\

\[-2pt]
  \sectionline\vspace{6pt}
}

% Cabeçalho de seção
\newcommand{\cvsection}[1]{
  \vspace{6pt}
  {\bfseries\color{primary} #1}\par
  \vspace{2pt}
}

